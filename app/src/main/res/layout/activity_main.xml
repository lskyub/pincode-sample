<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.co.sbproject.pincode.sample.MainActivity">

    <include
        android:id="@+id/tv_pin_1"
        layout="@layout/view_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2.5dp"
        app:layout_constraintBottom_toTopOf="@+id/rv_keypad"
        app:layout_constraintEnd_toStartOf="@+id/tv_pin_2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/tv_pin_2"
        layout="@layout/view_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2.5dp"
        android:layout_marginEnd="2.5dp"
        app:layout_constraintBottom_toTopOf="@+id/rv_keypad"
        app:layout_constraintEnd_toStartOf="@+id/tv_pin_3"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/tv_pin_1"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/tv_pin_3"
        layout="@layout/view_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2.5dp"
        android:layout_marginEnd="2.5dp"
        app:layout_constraintBottom_toTopOf="@+id/rv_keypad"
        app:layout_constraintEnd_toStartOf="@+id/tv_pin_4"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/tv_pin_2"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/tv_pin_4"
        layout="@layout/view_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2.5dp"
        android:layout_marginEnd="2.5dp"
        app:layout_constraintBottom_toTopOf="@+id/rv_keypad"
        app:layout_constraintEnd_toStartOf="@+id/tv_pin_5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/tv_pin_3"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/tv_pin_5"
        layout="@layout/view_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2.5dp"
        android:layout_marginEnd="2.5dp"
        app:layout_constraintBottom_toTopOf="@+id/rv_keypad"
        app:layout_constraintEnd_toStartOf="@+id/tv_pin_6"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/tv_pin_4"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/tv_pin_6"
        layout="@layout/view_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2.5dp"
        app:layout_constraintBottom_toTopOf="@+id/rv_keypad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/tv_pin_5"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_keypad"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.65" />

</androidx.constraintlayout.widget.ConstraintLayout>